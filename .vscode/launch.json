    "version": "0.2.0",
    "configurations": [

        {
            "name": "Azure Data Studio",
            "type": "sqlopsExtensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/azdata-sanddance" ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/packages/azdata-sanddance/out/**/*.js" ],
            "preLaunchTask": "",
            "timeout": 60000
        },
    ]
}