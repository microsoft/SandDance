{
    "name": "vscode-sanddance",
    "displayName": "SandDance for VSCode (Preview)",
    "description": "Visually explore, understand, and present your data.",
    "version": "0.2.3",
    "publisher": "msrvida",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/Sanddance"
    },
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:sandance.view"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "sandance.view",
                "title": "View in SandDance"
            }
        ],
        "languages": [
            {
                "id": "csv",
                "extensions": [
                    ".csv"
                ]
            },
            {
                "id": "tsv",
                "extensions": [
                    ".tsv"
                ]
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "sandance.view",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "sandance.view",
                    "when": "resourceLangId == csv"
                },
                {
                    "command": "sandance.view",
                    "when": "resourceLangId == tsv"
                }
            ]
        }
    },
    "scripts": {
        "clean": "rimraf ./resources/*.*",
        "vscode:prepublish": "npm run compile",
        "resources": "node ./resources",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build": "npm run compile && npm run resources",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "vsce-package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "common-extensions": "*",
        "deck.gl": "6.3.2",
        "luma.gl": "6.3.2",
        "office-ui-fabric-react": "^6.136.0",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "vega-lib": "^4.3.0",
        "vscode": "^1.1.21"        
    }
}