{
  "name": "@msrvida/sanddance-react",
  "version": "4.0.1",
  "description": "SandDance visualization canvas React component",
  "main": "dist/es6/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/SandDance.git",
    "directory": "packages/sanddance-react"
  },
  "types": "dist/es6/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "uitest": "parcel serve ./test/index.html --open --no-autoinstall --no-cache",
    "eslint": "eslint -c ../../.eslintrc.json --fix ./src/**/*.ts*",
    "docs": "typedoc src/index.ts -out ../../docs/docs/sanddance-react/v4 --theme ../../typedoc/theme --excludePrivate --gitRevision master",
    "deploy": "node ./scripts/deploy.js",
    "watch-typescript": "tsc -p . -w",
    "build-typescript": "tsc -p .",
    "build-css": "sass ./src/css/sanddance-react.scss ./dist/css/sanddance-react.css",
    "bundle": "rollup -c",
    "build:sanddance-core": "npm run build-typescript && node ../../scripts/version.js && npm run build-css && npm run bundle",
    "watch-css": "sass ./src/css/sanddance-react.scss ./dist/css/sanddance-react.css --watch",
    "remove-vega": "npm un vega",
    "patch": "npm version patch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@msrvida/sanddance": "^4",
    "just-compare": "^1.3.0"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0 <18.0.0",
    "@types/react-dom": ">=16.8.0 <18.0.0",
    "react": ">=16.8.0 <18.0.0",
    "react-dom": ">=16.8.0 <18.0.0"
  },
  "devDependencies": {
    "vega": "5.25.0"
  }
}
