{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "data": [
    {
      "name": "source_0",
      "url": "https://sanddance.js.org/sample-data/titanicmaster.tsv",
      "format": {
        "type": "tsv"
      },
      "transform": [
        {
          "type": "extent",
          "field": "Age",
          "signal": "bin_maxbins_30_Age_extent"
        },
        {
          "type": "bin",
          "field": "Age",
          "as": [
            "bin_maxbins_30_Age",
            "bin_maxbins_30_Age_end"
          ],
          "signal": "bin_maxbins_30_Age_bins",
          "extent": {
            "signal": "bin_maxbins_30_Age_extent"
          },
          "maxbins": 30
        },
        {
          "type": "window",
          "params": [
            null
          ],
          "as": [
            "id"
          ],
          "ops": [
            "row_number"
          ],
          "fields": [
            null
          ],
          "sort": {
            "field": [],
            "order": []
          }
        },
        {
          "type": "aggregate",
          "groupby": [
            "Class",
            "id",
            "Name",
            "bin_maxbins_30_Age",
            "bin_maxbins_30_Age_end"
          ],
          "ops": [
            "sum"
          ],
          "fields": [
            "TicketCost"
          ],
          "as": [
            "sum_TicketCost"
          ]
        },
        {
          "type": "stack",
          "groupby": [
            "Class",
            "bin_maxbins_30_Age",
            "bin_maxbins_30_Age_end"
          ],
          "field": "sum_TicketCost",
          "sort": {
            "field": [
              "sum_TicketCost"
            ],
            "order": [
              "descending"
            ]
          },
          "as": [
            "sum_TicketCost_start",
            "sum_TicketCost_end"
          ],
          "offset": "zero"
        }
      ]
    },
    {
      "name": "facet_domain",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "bin_maxbins_30_Age",
            "bin_maxbins_30_Age_end"
          ]
        }
      ]
    },
    {
      "name": "facet_domain_row",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "ceil(length(data(\"facet_domain\")) / 10)"
          }
        }
      ]
    },
    {
      "name": "facet_domain_column",
      "transform": [
        {
          "type": "sequence",
          "start": 0,
          "stop": {
            "signal": "min(length(data(\"facet_domain\")), 10)"
          }
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "child_width",
      "value": 300
    },
    {
      "name": "child_height",
      "value": 300
    }
  ],
  "layout": {
    "padding": 20,
    "bounds": "full",
    "align": "all",
    "columns": 10
  },
  "marks": [
    {
      "name": "facet-title",
      "type": "group",
      "role": "column-title",
      "title": {
        "text": "Age (binned)",
        "style": "guide-title",
        "offset": 10
      }
    },
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "from": {
        "data": "facet_domain_row"
      },
      "encode": {
        "update": {
          "height": {
            "signal": "child_height"
          }
        }
      },
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "Class",
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "from": {
        "data": "facet_domain_column"
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          }
        }
      },
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "Sum of TicketCost",
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {
            "signal": "ceil(child_width/40)"
          },
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "title": {
        "text": {
          "signal": "!isValid(parent[\"bin_maxbins_30_Age\"]) || !isFinite(+parent[\"bin_maxbins_30_Age\"]) ? \"null\" : format(parent[\"bin_maxbins_30_Age\"], \"\") + \" - \" + format(parent[\"bin_maxbins_30_Age_end\"], \"\")"
        },
        "style": "guide-label",
        "frame": "group",
        "offset": 10
      },
      "style": "cell",
      "from": {
        "facet": {
          "name": "facet",
          "data": "source_0",
          "groupby": [
            "bin_maxbins_30_Age",
            "bin_maxbins_30_Age_end"
          ]
        }
      },
      "sort": {
        "field": [
          "datum[\"bin_maxbins_30_Age\"]"
        ],
        "order": [
          "ascending"
        ]
      },
      "encode": {
        "update": {
          "width": {
            "signal": "child_width"
          },
          "height": {
            "signal": "child_height"
          }
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "rect",
          "style": [
            "bar"
          ],
          "from": {
            "data": "facet"
          },
          "encode": {
            "update": {
              "fill": {
                "scale": "color",
                "field": "id"
              },
              "tooltip": {
                "signal": "''+datum[\"Name\"]"
              },
              "x": {
                "scale": "x",
                "field": "sum_TicketCost_end"
              },
              "x2": {
                "scale": "x",
                "field": "sum_TicketCost_start"
              },
              "y": {
                "scale": "y",
                "field": "Class"
              },
              "height": {
                "scale": "y",
                "band": true
              }
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "gridScale": "y",
          "grid": true,
          "tickCount": {
            "signal": "ceil(child_width/40)"
          },
          "domain": false,
          "labels": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": [
          "sum_TicketCost_start",
          "sum_TicketCost_end"
        ]
      },
      "range": [
        0,
        {
          "signal": "child_width"
        }
      ],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Class",
        "sort": true
      },
      "range": [
        0,
        {
          "signal": "child_height"
        }
      ],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "id",
        "sort": true
      },
      "range": "category"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {
        "signal": "clamp(child_height, 64, 200)"
      },
      "symbolType": "square",
      "title": "id"
    }
  ]
}